        <%= content_tag :li, check_box_tag('loop_checkbox') + "&nbsp;&nbsp;Loop".html_safe, class: 'nolink' %>
        <%= content_tag :li, check_box_tag('randomize_checkbox') + "&nbsp;&nbsp;Randomize".html_safe, class: 'nolink' %>
      </ul>
    </div>
</div>