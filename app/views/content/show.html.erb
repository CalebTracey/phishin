<div id="header_container">
  <div id="header">
    <%= content_tag :h1, @show.date.strftime("%b %-d, %Y")%>
    <%= content_tag :h2, (link_to @show.venue.name, @show.venue.slug, alt: @show.venue.name) %>
    <%= content_tag :h2, (link_to @show.venue.location, @show.venue.location, alt: @show.venue.location) %>
    <%= render partial: 'shared/context_menu_for_show', locals: {show: @show, viewing_this_show: true } %>
    <div class="likes_for_show"><a></a><span>153203</span></div>
  </div>
</div>
  
<div id="content">
  
  <% set = false %>
  <% @show.tracks.each do |track| %>
    <% if track.set != set %>
      <% if set %>
        </ul>
      <% end %>
      <%= content_tag 'h1', track.set_name %>
      <ul class="item_list">
      <% set = track.set %>
    <% end %>
    <li data-audio-url="<%= track.file_url %>">
      <%= content_tag :h2, track.title %>
      <%= render partial: 'shared/context_menu_for_track' %>
      <h3><%= track.duration_readable %></h3>
      <div class="likes_for_track"><a></a><span>2</span></div>
      <div style="clear: both;"></div>
    </li>
  <% end %>
  </ul>
  
</div>