<div id="header_container">
  <div id="header">
    <%= content_tag :h1, @show.date.strftime("%b %-d, %Y") %>
    <%= content_tag :h2, (link_to @show.venue.name, @show.venue.slug, alt: @show.venue.name) %>
    <%= content_tag :h2, (link_to @show.venue.location, "/cities", alt: @show.venue.location) %>
    <%= render partial: 'shared/context_menu_for_show', locals: {show: @show, viewing_this_show: true } %>
    <%= likable(@show, @show_like, 'large') %>
  </div>
</div>
  
<div id="content">
  
  <% set = false %>
  <% @show.tracks.each_with_index do |track, idx| %>
    
    <% if track.set != set %>
      <% if set %>
        </ul>
      <% end %>
      <%= content_tag 'h1', track.set_name %>
      <ul class="item_list">
      <% set = track.set %>
    <% end %>
    
    <li class="liked" data-audio-url="<%= track.file_url %>">
      <%= content_tag :h2, track.title, class: 'wider' %>
      <%= render partial: 'shared/context_menu_for_track' %>
      <%= content_tag :h3, track.duration_readable %>
      <%= likable(track, @tracks_likes[idx], 'small') %>
      <div style="clear: both;"></div>
    </li>
  <% end %>
  </ul>
  
</div>