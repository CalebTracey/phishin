<div id="header_container">
  <div id="header">
    <h1>Songs</h1>
    <h3><%= pluralize @songs.size, 'song' %></h3>
    <%= render partial: 'header_filter', locals: { current_title: @sort_display, item_hash: {'Sort Alphabetically' => '?sort=title', 'Sort by Performances' => '?sort=performances'} } %>
  </div>
</div>
  
<div id="content">
  
  <% unless @display_separators %>
    <ul class="item_list clickable">
  <% end %>
  
  <% last_title = false %>
  <% for song in @songs %>
  
    <% if @display_separators %>
      <% if song.title_letter.match(/\d/) %>
        <% title = '1-9' %>
      <% else %>
        <% title = song.title_letter %>
      <% end %>
      <% if title != last_title %>
        <% if last_title %>
          </ul>
        <% end %>
        <% last_title = title %>
        <%= content_tag 'h1', title %>
        <ul class="item_list clickable">
      <% end %>
    <% end %>
    
    <li name="<%= song.slug %>">
      <h2><%= link_to_song(song) %></h2>
      <h3 class="alt"><%= performances_or_alias_link(song) %></h3>
      <div style="clear: both;"></div>
    </li>
  <% end %>
  
  </ul>

</div>
