<div id="header_container">
  <div id="header">
    <%= content_tag :h1, "Songs" %>
    <%= content_tag :h3, pluralize(@songs.size, 'song') %>
    <%= render partial: 'header_filter', locals: { current_title: @sort_display, item_hash: {'Sort Alphabetically' => '?sort=title', 'Sort by Performances' => '?sort=performances'} } %>
  </div>
</div>
  
<div id="content">
  
  <% unless @display_separators %>
    <ul class="item_list clickable">
  <% end %>
  
  <% last_title = false %>
  <% for song in @songs %>
  
    <% if @display_separators %>
      <% if song.title_letter.match(/\d/) %>
        <% title = '1-9' %>
      <% else %>
        <% title = song.title_letter %>
      <% end %>
      <% if title != last_title %>
        <% if last_title %>
          </ul>
        <% end %>
        <% last_title = title %>
        <%= content_tag 'h1', title %>
        <ul class="item_list clickable">
      <% end %>
    <% end %>
    
    <li name="<%= song.slug %>">
      <%= content_tag :h2, link_to_song(song) %>
      <%= content_tag :h3, performances_or_alias_link(song), class: 'alt' %>
      <div style="clear: both;"></div>
    </li>
  <% end %>
  
  </ul>

</div>
