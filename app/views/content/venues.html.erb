<div id="header_container">
  <div id="header">
    <%= content_tag :h1, "Venues" %>
    <%= content_tag :h3, pluralize(@venues.size, 'venue') %>
    <% #render partial: 'header_filter', locals: { current_title: @sort_display, item_hash: {'Sort Alphabetically' => '?sort=title', 'Sort by Performances' => '?sort=performances'} } %>
  </div>
</div>
  
<div id="content">
  
  <% last_title = false %>
  <% for venue in @venues %>
  
    <% if venue.name_letter.match(/\d/) %>
      <% title = '1-9' %>
    <% else %>
      <% title = venue.name_letter %>
    <% end %>
    <% if title != last_title %>
      <% if last_title %>
        </ul>
      <% end %>
      <% last_title = title %>
      <%= content_tag 'h1', title %>
      <ul class="item_list clickable">
    <% end %>

    <li>
      <%= content_tag :h2, link_to(truncate(venue.name, length: 45), venue.slug), class: 'wide' %>
      <%= content_tag :h3, venue.shows_count, class: 'alt' %>
      <%= content_tag :h5, link_to(venue.location, "/cities") %>
      <div style="clear: both;"></div>
    </li>
            
  <% end %>
  
  </ul>

</div>
